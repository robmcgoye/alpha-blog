<h1 class="text-center mt-3">Login</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="row-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="input-group mb-3 row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email address" %>
          </div>
        </div>
        <div class="input-group mb-3 row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <div class="input-group mb-3 justify-content-center">
          <%= f.submit "Login", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3 text-center">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "link-info" %>
  </div>
</div>
