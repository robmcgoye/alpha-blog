<div class="container">
  <%= render 'shared/errors', obj: @category %>
  <div class="row justify-content-center">
    <div class="row-10">
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input-group mb-3 row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>
          </div>
        </div>
        <div class="input-group mb-3 justify-content-center">
          <%= f.submit(@category.new_record? ? "Sign up" : "Create category", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3 text-center">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "link-info" %>
  </div>
</div>
